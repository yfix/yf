<?xml version="1.0" encoding="UTF-8" ?>
<phpunit backupGlobals="false" 
	backupStaticAttributes="false"
	colors="true"
	convertErrorsToExceptions="true"
	convertNoticesToExceptions="true"
	convertWarningsToExceptions="true"
	processIsolation="false"
	stopOnFailure="true"
	syntaxCheck="false"
	verbose="true"
>
	<testsuites>
		<testsuite name="all-tests">
			<directory>./</directory>
		</testsuite>
		<testsuite name="cache">
			<directory>./functional/cache/</directory>
		</testsuite>
		<testsuite name="database">
			<directory>./functional/db/</directory>
			<directory>./unit/db/</directory>
		</testsuite>
		<testsuite name="functions">
			<directory>./unit/functions/</directory>
		</testsuite>
		<testsuite name="tpl">
			<directory>./unit/tpl/</directory>
		</testsuite>
	</testsuites>
	<!--logging>
		<log type="coverage-clover" target="artifacts/phpunit/coverage/coverage.xml" />
		<log type="junit" target="artifacts/phpunit/phpunit.xml" logIncompleteSkipped="true" />
		<log type="testdox-html" target="./logs/testdox.html" />
	</logging-->
</phpunit>
